{
  "name": "chat-system-server",
  "version": "1.0.0",
  "description": "Node.js backend for chat system with JSON file storage",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "restart": "taskkill /F /IM node.exe && npm run dev",
    "test": "cross-env NODE_ENV=test mocha test/**/*.test.js --timeout 10000 --exit",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=text --reporter=html npm test",
    "test:watch": "cross-env NODE_ENV=test mocha test/**/*.test.js --timeout 10000 --watch"
  },
  "keywords": [
    "nodejs",
    "express",
    "chat",
    "json-storage"
  ],
  "author": "Student",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "multer": "^2.0.2",
    "peer": "^1.0.2",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "cross-env": "^10.1.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0"
  }
}
